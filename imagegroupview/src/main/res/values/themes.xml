<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light"/>

    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat"/>

    <style name="FrameworkRoot.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground" >@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ImageGroupBaseTheme" parent="FrameworkRoot.Theme">
        <item name="colorPrimary">@color/image_group_theme_primary</item>
        <item name="colorPrimaryDark">@color/image_group_theme_primary_dark</item>
    </style>
</resources>