<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/list_horizontal_margin"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_album"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#dddddd"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_group_default_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="jalsdjgsdlgj"
            />

        <TextView
            android:id="@+id/text_album_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_group_default_padding"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            tools:text="jalsdjgsdlgj"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_album_selected_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_image_group_folder_check"
        />

</LinearLayout>